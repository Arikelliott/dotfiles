[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
; - foreground-alt seems to be the label/icon color
foreground-alt = #ffb52a
primary = #ffb52a
secondary = #ffb52a
alert = #bd2c40
underline = #ffb52a
tray-background = #dda439

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%:-20
height = 30
offset-x = 10
offset-y = 10
radius = 0
; fixed-center sets whether the middle modules of the bar are centered or not.
fixed-center = true

; To get a proper gap around polybar, this (override-redirect = true and wm-restack = i3)
; along with the offset x and y and width 100%:-20 is necessary to make it work with i3gaps
; and have a proper gap around the bar. It's also necessary in i3's config to set a "gaps top"
; because otherwise the bar and i3's windows would float into each other. Basically it's
; telling i3 to float polybar, then setting an offset for windows so they don't overlap.
; For some reason offset-x/y don't work otherwise and float the tray instead?
; And all of this is necessary because the normal trick to give polybar "gaps" is to set a
; transparent border around it, but picom's drop shadows regard transparent elements of a
; window as casting a shadow, and the shadow won't show through the transparent parts either.
override-redirect = true
wm-restack = i3

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00t

;border-size = 4
border--size = 0
border-right-size = 0
border-top-size = 0
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 1

; Main font = Fantasque Sans Mono Nerd Font
font-0 = "Fantasque Sans Mono Nerd Font:pixelsize=11;1"
; Font for volume bars, etc. = Unifont
font-1 = "Unifont:fontformat=truetype:size=9:antialias=false;0"
; Font for status modules = feather
font-2 = "feather:pixelsize=11;0"
; Currently unused = Sauce Code Pro Nerd Font
font-3 = "Sauce Code Pro Nerd Font:pixelsize=18;4"
; Font for i3 workspace icons = Iosevka Nerd Font Mono
font-4 = "Iosevka Nerd Font Mono:pixelsize=20;5"

modules-left = i3
modules-center = xwindow
modules-right = pulseaudio wlan eth battery cpu temperature date
;modules-left = i3
;modules-center = mpd
;modules-right = filesystem xbacklight alsa pulseaudio xkeyboard memory cpu wlan eth battery temperature date powermenu

tray-position = right
tray-padding = 4
tray-background = ${colors.tray-background}

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

